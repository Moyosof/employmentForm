                <label asp-for="UploadFrontID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UploadFrontID" class="form-control" />
                <span asp-validation-for="UploadFrontID" class="text-danger"></span>
