            </div>
            <div class="col-10 pb-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="BirthDate" class="control-label pt-2" style="font-size:20px;"></label>
